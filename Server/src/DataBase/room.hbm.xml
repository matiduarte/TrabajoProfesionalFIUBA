<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
  <class name="entities.Room" table="Room">  
    <id name="id">  
     <generator class="increment"></generator>  
    </id>  
            
    <property name="floor"></property>  
    <property name="x1" type="int"></property>  
    <property name="y1" type="int"></property>
    <property name="x2" type="int"></property>
    <property name="y2" type="int"></property>  
            
  </class>  
            
 </hibernate-mapping>  